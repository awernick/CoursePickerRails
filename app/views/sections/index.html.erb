<div class="col-sm-12">
  <h1> Course: <%= @course.name %> </h1>
  <h3> Available Times </h3>
  <hr/>
  <div class="panel panel-default">
    <%= form_tag course_sections_path, method: 'get' do %>
      <div class="panel-body">
        <h4> Filter </h4>
        <div class="row">
          <div class="col-sm-2">
            <h5> Days:  </h5>
            <% Section::DAYS.each do |abbrev, name| %>
              <div class="checkbox">
                <label>
                  <%= check_box_tag("days[]", abbrev) %> <%= name %>
                </label>
              </div>
            <% end %>
          </div>

          <div class="col-sm-5">
            <h5> Time: <small> (ex. 7:00 PM to 8:00 PM) </small></h5>
            <%= text_field_tag "start_time", '', class: "form-control" %>
            <h6><small>To:</small></h6>
            <%= text_field_tag "end_time", '', class: "form-control" %>
          </div>

          <div class="col-sm-4">
            <h5> Professor:  </h5>
            <%= text_field_tag "professor", '', class: "form-control" %>
          </div>
        </div>
        <%= submit_tag("Filter", class: 'btn btn-default pull-right') %>
      </div>
    <% end %>
  </div>
  <table class="table table-striped">
    <thead>
      <th> 
        Class Days 
      </th>
      <th> Meeting Time </th>
      <th> Professor </th>
      <th> &nbsp; </th>
    </thead>
    <tbody>
      <% for section in @sections %>
        <tr>
          <td> <%= day_bitmask_to_str(section.days) %> </td>
          <td> 
            <%= section.start_time.strftime("%I:%M%p") %> 
            -
            <%= section.end_time.strftime("%I:%M%p") %> 
          </td>
          <td> <%= section.professor.try(:abbrev_name) %></td>
          <% if logged_in? && section.enrolled?(current_student) %>
            <td> <%= link_to 'Drop Course', 
              drop_section_path(section.uuid), method: :post %> </td>
          <% else %>
            <td> <%= link_to 'Enroll', 
              enroll_section_path(section.uuid), method: :post %> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
