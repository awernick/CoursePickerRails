<div class="panel panel-default">
  <%= form_tag course_sections_path, method: 'get' do %>
    <div class="panel-body">
      <h4> Filter </h4>
      <div class="row">
        <div class="col-sm-2">
          <h5> Days:  </h5>
          <% Section::DAYS.each_with_index do |(abbrev, name), idx| %>
            <div class="checkbox">
              <label>
                <%= check_box_tag("days[]", idx, @filters.days[idx]) %> 
                <%= name %>
              </label>
            </div>
          <% end %>
        </div>

        <div class="col-sm-5">
          <h5> Time: <small> (ex. 7:00 PM to 8:00 PM) </small></h5>
          <%= text_field_tag "start_time", @filters.start_time, class: "form-control" %>
          <h6><small>To:</small></h6>
          <%= text_field_tag "end_time", @filters.end_time, class: "form-control" %>
        </div>

        <div class="col-sm-4">
          <h5> Professor:  </h5>
          <%= text_field_tag "professor", @filters.professor, class: "form-control" %>
        </div>
      </div>
      <div class="buttons pull-right">
        <%= link_to("Clear", course_sections_path, class: "btn btn-default") %>
        <%= submit_tag("Filter", class: 'btn btn-primary') %>
      </div>
    </div>
  <% end %>
</div>
